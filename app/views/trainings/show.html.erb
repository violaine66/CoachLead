<div class="container mt-5">
  <div>
    <h2>Détails de l'entraînement</h2>
      <p><%= @training.date%></p>
      <p><%= @training.title%></p>
      <p><%= @training.location%></p>
      <p><%= @training.description%></p>
  </div>
  <% if current_user.entraineur? %>
   <p><%= link_to "Renseigner les absences/retards des joueurs", new_training_attendance_path(@training), class: "btn btn-primary mt-3"%></p>
  <% end %>

<% if current_user.joueur? %>
  <% if @pre_training_evaluation.present? %>
    <div class="mt-5">
      <h4>Ton évaluation pré-entrainement</h4>
      <ul>
        <li>Présent : <%= @pre_training_evaluation.present ? "Oui" : "Non" %></li>
        <li>Fatigue cognitive : <%= @pre_training_evaluation.cognitive_fatigue %></li>
        <li>Fatigue physique : <%= @pre_training_evaluation.physical_fatigue %></li>
        <li>Humeur : <%= @pre_training_evaluation.mood %></li>
      </ul>

    </div>
  <% else %>
    <%= link_to "Faire mon évaluation pré-entrainement", new_training_pre_training_evaluation_path(@training), class: "btn btn-primary mt-3" %>
  <% end %>
<% end %>

<% if current_user.entraineur? %>
  <div class="mt-5">
    <h4>Évaluations pré-entrainement des joueurs</h4>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Joueur</th>
          <th>Présent</th>
          <th>Fatigue cognitive</th>
          <th>Fatigue physique</th>
          <th>Humeur</th>
        </tr>
      </thead>
      <tbody>
        <% @pre_training_evaluations.each do |evaluation| %>
          <tr>
            <td><%= "#{evaluation.user.player_profil.first_name} #{evaluation.user.player_profil.last_name}" %></td>
            <td><%= evaluation.present ? "Oui" : "Non" %></td>
            <td><%= evaluation.cognitive_fatigue %></td>
            <td><%= evaluation.physical_fatigue %></td>
            <td><%= evaluation.mood %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>


 <div class="mt-5">
  <% if current_user.entraineur? %>
    <h4>Absences / Retards des joueurs</h4>

    <table class="table table-striped mt-3">
      <thead>
        <tr>
          <th>Joueur</th>
          <th>Date</th>
          <th>Statut</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @training.attendances.each do |a| %>
          <tr>
            <td><%= "#{a.user.player_profil.first_name} #{a.user.player_profil.last_name}" %></td>
            <td><%= l(a.training.date, format: :long) %></td>
            <td>
              <% badge_class = case a.status
                  when "present" then "badge bg-success"
                  when "absent" then "badge bg-danger"
                  when "late" then "badge bg-warning text-dark"
                  when "excused" then "badge bg-info text-dark"
                  else "badge bg-secondary"
                end %>
              <span class="<%= badge_class %>">
                <%= a.status.present? ? a.status.capitalize : "Non défini" %>
              </span>
            </td>
            <td>
              <%= link_to edit_training_attendance_path(@training, a), class: "text-decoration-none" do %>
                <i class="fas fa-edit"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>




    <div class="mt-5">
      <%= link_to "Retour à la liste des entraînements", trainings_path %>
  </div>
</div>
