<div class="container">
  <div class="form-training">
    <h1 class="mt-5">Créer un entraînement</h1>
    <%= simple_form_for @training do |f| %>
      <div class="form-inputs">
        <%= f.input :date, as: :date, input_html: { class: "datepicker" } %>
        <%= f.input :title %>
        <%= f.input :location %>
        <%= f.input :description %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Créer l'entraînement" %>
      </div>
    <% end %>
    <div class="mt-5">
      <p><%= link_to "Retour à la liste des entraînements", trainings_path %></p>
    </div>
  </div>
</div>
