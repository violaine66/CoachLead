<div class="container mt-5">
    <div class="row d-flex justify-content-center">
      <div class="col-10">
        <% if current_user.entraineur? %>
        <div class="training-new text-end">
            <h2><%= link_to "CrÃ©er un entraÃ®nement", new_training_path, class:"btn btn-success text-white py-2" %></h2>
          </div>
      <% end %>

      <div class="row d-flex justify-content-center">
        <div class="col-12 text-center">
          <h1 class="my-5">Mes Entrainements</h1>

            <% @trainings.each do |t| %>
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <%= link_to training_path(t) do %>
                  <%= t.date.strftime("%d/%m/%Y") %>
                  <%= t.title %>
              </div>
              <div>
                <% if policy(Training).create?%>
                      <%= link_to edit_training_path(t) do %>
                      <i class="fa-solid fa-pen-to-square"></i>
                    <% end %>
                  <% end %>
                    <% if policy(Training).destroy? %>
                      <%= link_to training_path(t), data: { turbo_method: :delete, turbo_confirm: "Are you sure" } do %>
                        <i class="fa-solid fa-trash"></i>
                      <% end %>
                  <% end %>
              </div>
            </div>
            <hr>
              <% end %>
            <% end %>
          </div>

      </div>
    </div>
  </div>
</div>
