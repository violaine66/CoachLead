<!-- app/views/users/registrations/edit_avatar.html.erb -->
<div class="container mt-5">
  <div class="row">
    <div class="col-sm-10 col-md-6 col-lg-4 mx-auto">
      <h2 class="text-center mb-4">Ajouter / modifier votre photo de profil</h2>

      <% if current_user.avatar.attached? %>
        <div class="text-center mb-4">
          <p>Avatar actuel :</p>
          <%= image_tag current_user.avatar.variant(resize_to_limit: [100, 100]), class: "rounded-circle" %>
        </div>
      <% end %>

      <%= simple_form_for current_user, url: update_avatar_user_path, method: :patch, html: { multipart: true } do |f| %>
        <div class="mb-3">
          <%= f.input :avatar, as: :file, label: "Choisir une photo" %>
        </div>

        <div class="d-grid gap-2">
          <%= f.button :submit, "Mettre Ã  jour", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="mt-4 text-center">
        <%= link_to "Retour", root_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>
