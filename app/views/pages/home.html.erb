<div class="container">
  <% if current_user.entraineur? %>
   <h1 class="mt-5">Bienvenue Coach <%= current_user.pseudo %> !</h1>
    <div card="card-home">

      <h2><%= link_to "Voir les joueurs", player_profils_path %></h2>

      <div class="entrainements mt-5">
        <h2><%= link_to "Mes Entrainements", trainings_path %></h2>
      </div>

      <div class="penibilite-index">
        <h2><%= link_to "Consulter les évaluations de pénibilité", job_load_evaluations_path %></h2>
      </div>

      <div class="match-performances-index">
        <h2><%= link_to "Consulter les performances de match", match_performances_path %></h2>
      </div>
    </div>


  <% elsif current_user.joueur? %>
    <h1>Bienvenue <%= current_user.email %> !</h1>
      <div class="card-home">

        <h2 class="mt-3"><%= link_to "Mon profil", player_profil_path(current_user.player_profil) %></h2>

        <div class="penibilite-joueur">
          <h2><%= link_to "Mes évaluations de pénibilité", job_load_evaluations_path %></h2>
        </div>

        <div class="entrainements-joueur">
          <h2><%= link_to "Mes Entrainements", trainings_path %></h2>
        </div>

        <div class="match-performances-joueur">
          <h2><%= link_to "Mes performances de match", match_performances_path %></h2>
        </div>
      </div>

      <div class="prochain-entrainement">
        <% if @next_training %>
          <p>Prochain entraînement : <%= l(@next_training.date, format: :long) %></p>
          <%= link_to "Voir l'entraînement", training_path(@next_training), class: "btn btn-primary" %>
        <% else %>
          <p>Aucun entraînement à venir pour le moment.</p>
        <% end %>
      </div>

  <% end %>
</div>
