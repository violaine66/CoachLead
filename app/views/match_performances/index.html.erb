<div class="container">
  <h1 class="mt-3 text-center">Performances de match</h1>
  <% if current_user.entraineur? %>
    <div class="text-end">
    <%= link_to "Créer une nouvelle performance", new_match_performance_path, class: "btn btn-success text-white" %>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-sm-12 col-md-10 col-lg-10">
      <h3 class="mt-2">Statistiques globales par joueur</h3>
        <table class="table table-bordered mt-2">
          <thead>
            <tr>
              <th>Joueur</th>
              <th>Matchs joués</th>
              <th>Cartons jaunes</th>
            </tr>
          </thead>
          <tbody>
            <% @stats_by_player.each do |user, stats| %>
              <tr>
                <td>
                  <% if user.player_profil.present? %>
                    <%= "#{user.player_profil.first_name} #{user.player_profil.last_name}" %>
                  <% else %>
                    <%= "Profil manquant" %>
                  <% end %>
                </td>
                <td><%= stats[:total_played] %></td>
                <% if  stats[:total_yellow_cards] >= 2 %>
                  <td class="badge bg-warning text-dark"><%= stats[:total_yellow_cards] %></td>
                <% else %>
                <td><%= stats[:total_yellow_cards] %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>

  <div data-controller="toggle" class="form mb-3">
    <button class="btn btn-outline-primary my-4" data-action="click->toggle#fire">Détails</button>
      <div class="row">
        <div class="col">
          <div data-toggle-target="togglableElement" class="d-none">
            <table class="table">
              <thead>
                <tr>
                  <% if current_user.entraineur? %>
                    <th>Joueur</th>
                  <% end %>
                  <th>Date</th>
                  <th>Participation</th>
                  <th>Cartons jaunes</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @match_performances.each do |performance| %>
                  <tr>
                    <% if current_user.entraineur? %>
                      <td>
                        <% if performance.user.player_profil.present? %>
                          <%= "#{performance.user.player_profil.first_name} #{performance.user.player_profil.last_name}" %>
                        <% else %>
                          <%= "Profil manquant" %>
                        <% end %>
                      </td>
                    <% end %>
                    <td><%= performance.match_date %></td>
                    <td><%= performance.played ? "Oui" : "Non" %></td>
                    <td><%= performance.yellow_card %></td>
                    <td>
                      <%= link_to "Voir", match_performance_path(performance), class: "btn btn-sm btn-primary text-white"%>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

        </div>
      </div>
  </div>



  <% else %>
    <p>Voici vos performances de match :</p>


  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Participation</th>
        <th>Cartons jaunes</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @match_performances.each do |performance| %>
        <tr>
          <% if current_user.entraineur? %>
            <td>
              <% if performance.user.player_profil.present? %>
                <%= "#{performance.user.player_profil.first_name} #{performance.user.player_profil.last_name}" %>
              <% else %>
                <%= "Profil manquant" %>
              <% end %>
            </td>
          <% end %>
          <td><%= performance.match_date %></td>
          <td><%= performance.played ? "Oui" : "Non" %></td>
          <td><%= performance.yellow_card %></td>
          <td>
            <%= link_to "Voir", match_performance_path(performance), class: "btn btn-sm btn-primary text-white"%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
 <% end %>
</div>
