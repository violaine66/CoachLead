<div class="container mt-5">
  <div class="row d-flex justify-content-center align-items-center flex-column">
    <div class="col-sm-6 col-md-6 col-lg-6 d-flex justify-content-center align-items-center flex-column">

      <h2>Exporter les présences</h2>

        <%= form_with url: attendances_admin_exports_path, method: :get, local: true, data: { turbo: false }  do %>
          <div>
            <%= label_tag :start_date, "Date de début", class:"mb-3" %><br>
            <%= date_field_tag :start_date, params[:start_date] || 1.month.ago.to_date, required: true %>
          </div>

          <div>
            <%= label_tag :end_date, "Date de fin" , class:"my-3"%><br>
            <%= date_field_tag :end_date, params[:end_date] || Date.today, required: true %>
          </div>

          <div>
            <%= submit_tag "Exporter CSV", class: "btn btn-primary my-4" %>
          </div>
        <% end %>
      <%= link_to "Retour", root_path, class:" btn btn-secondary"%>
    </div>
  </div>

</div>
