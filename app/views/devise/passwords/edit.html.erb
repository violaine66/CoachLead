<div class="container mt-5">
  <div class="row d-flex justify-content-center mt-5 ">
    <div class="col-10 col-md-6 col-md-6" id="card-login">
      <h2 class="my-3 fw-bold text-dark text-center">Changer mon mot de passe </h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-inputs">
          <%= f.input :password,
                      label: "Nouveau mot de passe",
                      required: true,
                      autofocus: true,
                      hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      label: "Confirmer mon nouveau mot de passe",
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Changer mon mot de passe", class:"btn btn-connect fw-bold mb-3" %>
        </div>
      <% end %>

      <div class="pb-3"><%= render "devise/shared/links" %></div>
    </div>
  </div>
</div>
