<div class="container mt-3">
   <div class="row d-flex justify-content-center">
    <div class="col-12 col-md-6 col-md-3">
          <h2 class="mt-2">Mon compte</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <%= f.input :password,
                        hint: "leave it blank if you don't want to change it",
                        required: false,
                        label: "Nouveau mot de passe",
                        input_html: { autocomplete: "Nouveau mot de passe" } %>
            <%= f.input :password_confirmation,
                        required: false,
                        label: "Confirmation du mot de passe",
                        input_html: { autocomplete: "Confirmation du mot de passe" } %>
            <%= f.input :current_password,
                        hint: "Nous avons besoin de votre mot de passe actuel pour valider les changements",
                        label: "Mot de passe actuel",
                        class: "text-white",
                        required: true,
                       input_html: { autocomplete: "Mot de passe actuel" } %>

          </div>

          <div class="form-actions">
            <%= f.button :submit, "Mettre Ã  jour", class:"btn btn-primary text-white" %>
          </div>
        <% end %>

        <h3 class="mt-5">Supprimer mon compte</h3>

        <div class="my-3">Pas satisfait? <%= button_to "Supprimer mon compte", registration_path(resource_name), class: "btn btn-primary text-white mt-1", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

        <%= link_to "Retour", :back %>
    </div>
  </div>
</div>
